	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.oaf</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>OAF Authfilter</filter-name>
		<filter-class>io.radien.security.openid.filter.OIDCAuthorizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>OAF Authfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.oaf</welcome-file>
	</welcome-file-list>



	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/AppFrameDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

